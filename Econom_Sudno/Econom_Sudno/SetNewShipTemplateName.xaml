<Window x:Class="Econom_Sudno.SetNewShipTemplateName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SetNewShipTemplateName" Height="150" Width="300"
        ResizeMode="NoResize"
        >
    <StackPanel Orientation="Vertical">
        <TextBlock HorizontalAlignment="Center" Margin="0 10 0 5">Введите название для нового шаблона</TextBlock>
        <TextBox x:Name="NewShipTemplateName" Width="150" Margin="0 5 0 10"></TextBox>
        <TextBlock Visibility="Collapsed" x:Name="Message" HorizontalAlignment="Center" Margin="0 0 0 10"></TextBlock>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Width="50" Margin="0 0 30 0" Click="OK_Click">OK</Button>
            <Button Width="80" IsCancel="True">Отмена</Button>
        </StackPanel>
    </StackPanel>
</Window>
